{
    "name": "hpakdaman/multicarbon",
    "description": "Multi-calendar extension for Carbon â€” Jalali (Solar Hijri), Hijri (Islamic Lunar), and Gregorian support.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "carbon",
        "jalali",
        "hijri",
        "shamsi",
        "persian",
        "calendar",
        "laravel",
        "php"
    ],
    "authors": [
        {
            "name": "hpakdaman"
        }
    ],
    "require": {
        "php": "^8.1",
        "nesbot/carbon": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "MultiCarbon\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\MultiCarbon\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MultiCarbon\\Laravel\\MultiCarbonServiceProvider"
            ],
            "aliases": {
                "MultiCarbon": "MultiCarbon\\Laravel\\MultiCarbonFacade"
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
